<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/code_name"
                android:textSize="@dimen/text_regular"
                android:padding="20dp"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_search_24"
                android:drawableTint="@color/primary_500"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:background="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton android:id="@+id/btnAllProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_24"
            android:layout_gravity="center"
            android:background="@drawable/btn_primary"
            android:padding="10dp"
            app:tint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">

            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/hash"/>
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="@string/description"/>
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/amount"
                android:gravity="right"/>
            <LinearLayout android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageButton android:id="@+id/btnRemove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_forever_24"
                    android:background="@drawable/btn_transparent"
                    android:padding="5dp"
                    app:tint="@color/gray"/>
            </LinearLayout>

        </LinearLayout>

        <View style="@style/Divider"></View>

        <ListView android:id="@+id/lvItemSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_item_sale"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_soft">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Tax :  " />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="300" />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Subtotal :  " />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="6,000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Charges :  " />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="0" />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Total :  "
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/text_large" />

                <TextView style="@style/AmountGroupTextView"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="6,300"
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/text_large" />

            </LinearLayout>

        </LinearLayout>

        <Button android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/pay"
            android:textSize="@dimen/text_regular"
            android:textAllCaps="true"
            android:background="@drawable/btn_primary"/>

    </LinearLayout>

</LinearLayout>