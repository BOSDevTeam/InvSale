            android:name=".NotificationSettingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BTPrinterSettingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SaleBillActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SaleOrderDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SaleOrderSuccessActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SaleOrderSummaryActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
