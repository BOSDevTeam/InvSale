<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/primary_200"
    android:gravity="center">

    <TextView android:text="@string/enter_verify_code"
        style="@style/DefaultTextView"/>

    <TextView android:id="@+id/tvSubtitle"
        tools:text="We have sent you an SMS with a code to the number +95 - 9951087310"
        style="@style/SmallTextView"
        android:layout_marginBottom="50dp"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bd_gray_1r_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/tvOTP1"
                style="@style/OtpTextView" />
            <TextView android:id="@+id/tvOTP2"
                style="@style/OtpTextView"/>
            <TextView android:id="@+id/tvOTP3"
                style="@style/OtpTextView"/>
            <TextView android:id="@+id/tvOTP4"
                style="@style/OtpTextView"/>
            <TextView android:id="@+id/tvOTP5"
                style="@style/OtpTextView"/>
            <TextView android:id="@+id/tvOTP6"
                style="@style/OtpTextView"/>

        </LinearLayout>

        <Button android:id="@+id/btnOK"
            android:text="@string/ok"
            style="@style/DefaultButton"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>
