<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout style="@style/DialogLayout"
        android:gravity="center">

        <TextView android:id="@+id/tvTitle"
            style="@style/DialogTitle" />

        <ImageButton android:id="@+id/btnClose"
            style="@style/DialogClose"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout"
        android:orientation="vertical"
        android:background="@color/gray_soft">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView android:id="@+id/tvInput"
                android:text="0"
                style="@style/DefaultTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/primary_500"
                android:textSize="@dimen/text_extra_large"
                android:textStyle="bold"/>

            <ImageButton android:id="@+id/btnBackspace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_backspace_24"
                android:background="@drawable/btn_gray"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:tint="@color/black_soft"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/btnOne"
                    android:text="@string/one"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnTwo"
                    android:text="@string/two"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnThree"
                    android:text="@string/three"
                    style="@style/NumberButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/btnFour"
                    android:text="@string/four"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnFive"
                    android:text="@string/five"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnSix"
                    android:text="@string/six"
                    style="@style/NumberButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/btnSeven"
                    android:text="@string/seven"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnEight"
                    android:text="@string/eight"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnNine"
                    android:text="@string/nine"
                    style="@style/NumberButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/btnZero"
                    android:text="@string/zero"
                    style="@style/NumberButton"/>

                <Button android:id="@+id/btnClear"
                    android:text="@string/c"
                    style="@style/NumberButton"
                    android:textColor="@color/red"/>

                <Button android:id="@+id/btnOK"
                    android:text="@string/ok"
                    style="@style/NumberButton"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>