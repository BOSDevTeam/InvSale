<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout style="@style/DialogLayout"
        android:gravity="center">

        <TextView android:text="@string/from_to_date_filter"
            style="@style/DialogTitle" />

        <ImageButton android:id="@+id/btnClose"
            style="@style/DialogClose"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/from_date"/>
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/colon_sign"
                android:gravity="center"/>
            <TextView android:id="@+id/tvFromDate"
                style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="07/07/2022"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/bd_gray_1r_white"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_date_range_24"
                android:drawableTint="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/to_date"/>
            <TextView style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/colon_sign"
                android:gravity="center"/>
            <TextView android:id="@+id/tvToDate"
                style="@style/SmallTextView"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="07/07/2022"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/bd_gray_1r_white"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_date_range_24"
                android:drawableTint="@color/gray"/>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout"
        android:gravity="right">

        <Button android:id="@+id/btnCancel"
            style="@style/DialogCancel"/>

        <Button android:id="@+id/btnOK"
            style="@style/DialogOk"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>