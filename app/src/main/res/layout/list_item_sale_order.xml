<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView android:id="@+id/tvYear"
                    style="@style/DefaultTextView"
                    tools:text="2022"
                    android:gravity="center"/>
                <TextView android:id="@+id/tvDay"
                    style="@style/DayStyle"
                    tools:text="27"
                    android:gravity="center"/>
                <TextView android:id="@+id/tvMonth"
                    style="@style/DefaultTextView"
                    tools:text="Jun"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView style="@style/DefaultTextView"
                        android:layout_width="wrap_content"
                        android:text="@string/order"/>
                    <TextView android:id="@+id/tvOrderNumber"
                        style="@style/DefaultTextView"
                        tools:text=" #SO0001"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView android:id="@+id/tvCustomer"
                    style="@style/DefaultTextView"
                    tools:text="CustomerA"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView style="@style/DefaultTextView"
                    android:text="@string/total"
                    android:gravity="right"/>
                <TextView android:id="@+id/tvGrandTotal"
                    style="@style/DefaultTextView"
                    tools:text="MMK 6,600"
                    android:gravity="right"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>