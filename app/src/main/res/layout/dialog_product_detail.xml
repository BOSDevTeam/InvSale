<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout style="@style/DialogLayout"
        android:gravity="center">

        <TextView android:text="@string/new_product"
            style="@style/DialogTitle" />

        <ImageButton android:id="@+id/btnClose"
            style="@style/DialogClose"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout"
        android:orientation="vertical">

        <ImageView android:id="@+id/imgPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_foreground2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView android:id="@+id/tvProductName"
                style="@style/DefaultTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Product ABC"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"/>

            <TextView android:id="@+id/tvPrice"
                style="@style/DefaultTextView"
                android:layout_width="wrap_content"
                android:text="MMK 2,000"
                android:textColor="@color/primary_700"/>

        </LinearLayout>

        <TextView android:id="@+id/tvDescription"
            style="@style/SmallTextView"
            tools:text="@string/description"
            android:textColor="@color/black_soft"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>