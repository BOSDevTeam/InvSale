<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout style="@style/DialogLayout"
        android:gravity="center">

        <TextView android:text="@string/confirm"
            style="@style/DialogTitle" />

        <ImageButton android:id="@+id/btnClose"
            style="@style/DialogClose"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout">

        <TextView android:id="@+id/tvMessage"
            style="@style/DefaultTextView"
            android:text="@string/delete_confirm_message"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout style="@style/DialogLayout"
        android:gravity="right">

        <Button android:id="@+id/btnCancel"
            style="@style/DialogCancel"/>

        <Button android:id="@+id/btnOK"
            style="@style/DialogOk"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>