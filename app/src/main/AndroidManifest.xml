            android:name=".ProductActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CategoryActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SaleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
